{
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "collectCoverageFrom": [
        "src/api/**/*.{js,jsx,tsx,ts}",
        "!**/node_modules/**",
        "!**/vendor/**",
        "!src/api/test/**/*",
        "!src/api/third-party/**/*",
        "!src/api/**/interfaces/**/*",
        "!src/api/exception/**/*",
        "!src/api/**/dto/**/*.dto.ts",
        "!src/api/main.ts",
        "!src/api/log/request-logger.interceptor.ts",
        "!src/api/log/log.service.ts",
        "!src/api/cli.ts"
    ],
    "coverageReporters": [
        "json",
        "lcov"
    ]
}
